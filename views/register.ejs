<%- include('./partials/messages') %>

    <body class="bg">
        <div class="container align-items-center justify-content-center">
        </div>
        <div class="container d-flex align-items-center justify-content-center" style="height: 100vh">
            <div class="user_cardr">
                <div class="container">
                    <div class="container d-flex justify-content-center">
                        <div class="brand_logo_container">
                            <img src="/picture/SMK (1).png" class="img-fluid" alt="Logo">
                        </div>
                    </div>
                    <div class="container d-flex justify-content-center form_container">
                        <form action="/register" method="POST" autocomplete="off">
                            <div>
                                <div class="d-flex justify-content-center mb-1">
                                    <h2>
                                        <%= title %>
                                    </h2>
                                </div>
                                <div class="container">
                                    <form class="card-text trtxt">
                                        <div class="container">
                                            <div class="input-group mb-2">
                                                <div class="input-group-append">
                                                    <span class="input-group-text"><img
                                                        src="picture/128/USER__x2F__ADD_1_.png" class="iclg img-fluid"
                                                        alt="Icon">
                                                </span>
                                                </div>
                                                <input type="text" id="name" name="name" class="form-control input_pass" placeholder="Masukan Nama" value="<%= typeof name != 'undefined' ? name : '' %>" / required>
                                            </div>
                                            <div class="row">
                                                <div class="col-12">
                                                    <div class="input-group mb-2">
                                                        <div class="input-group-append">
                                                            <span class="input-group-text"> <img
                                                                src="picture/128/GRID_1_1_.png" class="iclg img-fluid"
                                                                alt="Icon">
                                                        </span>
                                                        </div>
                                                        <select name="jeniskelamin" id="jeniskelamin" class="custom-select">
                                                        <option disabled selected>Jenis Kelamin</option>
                                                        <option value="Laki-laki">Laki-laki</option>
                                                        <option value="Perempuan">Perempuan</option>
                                                    </select>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-12">
                                                    <div class="input-group mb-2">
                                                        <div class="input-group-append">
                                                            <span class="input-group-text"> <img
                                                                src="picture/128/MAP_1_.png" class="iclg img-fluid"
                                                                alt="Icon">
                                                        </span>
                                                        </div>
                                                        <select name="kelas" id="kelas" class="custom-select">
                                                        <option value="" selected>Kelas</option>
                                                    </select>
                                                        <select name="jurusan" id="jurusan" class="custom-select" value="" disabled>
                                                        <option value="" selected>Jurusan</option>
                                                    </select>
                                                        <select name="index" id="index" class="custom-select" value="" disabled>
                                                        <option value="" selected>Indeks</option>
                                                    </select>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="input-group mb-2">
                                                <div class="input-group-append">
                                                    <span class="input-group-text"> <img src="picture/128/NOTEPAD_1_.png"
                                                        class="iclg img-fluid" alt="Icon">
                                                </span>
                                                </div>
                                                <input type="text" name="absen" class="form-control input_user" value="<%= typeof absen != 'undefined' ? absen : '' %>" placeholder="No. Absen  " required>
                                            </div>
                                            <div class="input-group mb-2">
                                                <div class="input-group-append">
                                                    <span class="input-group-text"><img
                                                        src="picture/128/USER__x2F__ADD_1_.png" class="iclg img-fluid"
                                                        alt="Icon"></span>
                                                </div>
                                                <input type="text" name="username" class="form-control input_pass" value="<%= typeof username != 'undefined' ? username : '' %>" placeholder="Username" required>
                                            </div>
                                            <div class="row">
                                                <div class="col-6">
                                                    <div class="input-group mb-3">
                                                        <div class="input-group-append">
                                                            <span class="input-group-text"> <img
                                                                src="picture/128/UNLOCK_1_.png" class="iclg img-fluid"
                                                                alt="Icon">
                                                        </span>
                                                        </div>
                                                        <input type="password" name="password" class="form-control input_user" value="<%= typeof password != 'undefined' ? password : '' %>" placeholder="Password" required>
                                                    </div>
                                                </div>
                                                <div class="col-6">
                                                    <div class="input-group mb-3">
                                                        <div class="input-group-append">
                                                            <span class="input-group-text"> <img
                                                                src="picture/128/UNLOCK_1_.png" class="iclg img-fluid"
                                                                alt="Icon">
                                                        </span>
                                                        </div>
                                                        <input type="password" name="password2" class="form-control input_user" value="<%= typeof password2 != 'undefined' ? password2 : '' %>" placeholder="Konfirmasi" required>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="d-flex justify-content-center mt-0 login_container">
                                                <button type="submit" class="btn login_btn">Register</button>
                                            </div>
                                        </div>
                                        <div class="mt-1">
                                            <div class="d-flex justify-content-center links">
                                                Sudah terdaftar? Silahkan <a href="/login" class="ml-2">Masuk</a>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </body>