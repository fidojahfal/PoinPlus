<body class="bg">
    <div class="container d-flex align-items-center justify-content-center" style="height: 100vh">
        <div class="poin_card">
            <div class="container d-flex justify-content-center form_container mt-0">
                <form method="POST" action="/update" autocomplete="off">
                    <div class="d-flex justify-content-center mb-3">
                        <h2>Poin Siswa Sekarang</h2>
                    </div>
                    <div class="d-flex justify-content-center mb-5">
                        <div class="number_card">
                            <div class="container d-flex justify-content-center">
                                <h1 type="number" class="display-1 font-weight-bold">
                                    <%= user.point %>
                                </h1>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center mb-2">
                        <h2>Tambah Poin</h2>
                    </div>
                    <div class="input-group mb-4">
                        <div class="container d-flex justify-content-center">
                            <input type="text" name="point2" class="form-control-number input_number text-center display-1 pb-3 font-weight-bold" value="" placeholder="Poin" required>
                            <input type="text" name="_id" value="<%= user._id %>" hidden>
                            <input type="text" name="names" value="<%= user.name %>" hidden>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center login_container">
                        <button type="submit" name="button" class="btn login_btn">Tambah</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>