<%- include('./partials/messages') %>

<form action="/update" method="POST" autocomplete="off">

  <div class="form-group">
    <label for="point">Nama Siswa</label>
    <%- user.name %>
    <div class="form-group">
      <label for="point">Total Point</label>
      <%- user.point %> 
    <div class="form-group">
        <label for="point2">Tambahan Point</label>
        <input
          type="number"
          id="point2"
          name="point2"
          placeholder="Masukan Point" required>
      </div>
    <button type="submit">
      Add Point
    </button>
  </form>